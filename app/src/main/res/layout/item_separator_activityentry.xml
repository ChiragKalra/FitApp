<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        android:clipToPadding="false"
        android:backgroundTint="?headerBackgroundColor"
        android:background="@drawable/bg_foodjournal_separator">

        <TextView
            android:id="@+id/textview_date"
            tools:text="12 June"
            android:textSize="18sp"
            android:textColor="?android:textColorHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        
        <!-- Calories -->
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressbar_calories"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/textview_calories"
            app:layout_constraintEnd_toStartOf="@id/textview_calories"
            app:layout_constraintBottom_toBottomOf="@id/textview_calories"

            app:cpb_progress="75"
            app:cpb_background_progressbar_color="?trackbarBackgroundColor"
            app:cpb_background_progressbar_width="2dp"
            app:cpb_progress_direction="to_left"
            app:cpb_progressbar_color="?colorControlBlue"
            app:cpb_progressbar_width="4dp"
            app:cpb_round_border="true" />

        <TextView
            android:id="@+id/textview_calories"
            tools:text="1200 kcal"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/textview_date"
            app:layout_constraintBottom_toBottomOf="@id/textview_date"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Move Min -->
        <TextView
            android:id="@+id/textview_move_min_label"
            android:text="@string/move_min"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toTopOf="@id/textview_move_min"
            app:layout_constraintTop_toBottomOf="@id/textview_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textview_distance_label"/>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressbar_move_min"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"

            app:cpb_progress="0"
            app:cpb_background_progressbar_color="?trackbarBackgroundColor"
            app:cpb_background_progressbar_width="2dp"
            app:cpb_progress_direction="to_left"
            app:cpb_progressbar_color="?colorControlPurple"
            app:cpb_progressbar_width="4dp"
            app:cpb_round_border="true"
            app:layout_constraintTop_toTopOf="@id/textview_move_min"
            app:layout_constraintStart_toStartOf="@id/textview_move_min_label"
            app:layout_constraintEnd_toStartOf="@id/textview_move_min"
            app:layout_constraintBottom_toBottomOf="@id/textview_move_min"/>

        <TextView
            android:id="@+id/textview_move_min"
            android:text="@string/zero_gm"
            tools:text="54.3"
            android:textSize="16sp"
            android:textColor="?colorControlPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_move_min_label"
            app:layout_constraintStart_toEndOf="@id/progressbar_move_min"
            app:layout_constraintEnd_toEndOf="@id/textview_move_min_label" />

        <!-- Km -->
        <TextView
            android:id="@+id/textview_distance_label"
            android:text="@string/km"
            android:textSize="16sp"
            android:layout_width="84dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toTopOf="@id/textview_distance_km"
            app:layout_constraintTop_toBottomOf="@id/textview_date"
            app:layout_constraintStart_toEndOf="@id/textview_move_min_label"
            app:layout_constraintEnd_toStartOf="@id/textview_steps_label"/>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressbar_distance"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"

            app:cpb_progress="0"
            app:cpb_background_progressbar_color="?trackbarBackgroundColor"
            app:cpb_background_progressbar_width="2dp"
            app:cpb_progress_direction="to_left"
            app:cpb_progressbar_color="?colorControlGreen"
            app:cpb_progressbar_width="4dp"
            app:cpb_round_border="true"
            app:layout_constraintTop_toTopOf="@id/textview_distance_km"
            app:layout_constraintStart_toStartOf="@id/textview_distance_label"
            app:layout_constraintEnd_toStartOf="@id/textview_distance_km"
            app:layout_constraintBottom_toBottomOf="@id/textview_distance_km"/>

        <TextView
            android:id="@+id/textview_distance_km"
            android:text="@string/zero_gm"
            tools:text="7.8"
            android:textSize="16sp"
            android:textColor="?colorControlGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_distance_label"
            app:layout_constraintStart_toEndOf="@id/progressbar_distance"
            app:layout_constraintEnd_toEndOf="@id/textview_distance_label"/>


        <!-- Steps -->
        <TextView
            android:id="@+id/textview_steps_label"
            android:text="@string/steps"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:layout_constraintBottom_toTopOf="@id/textview_steps"
            app:layout_constraintTop_toBottomOf="@id/textview_date"
            app:layout_constraintStart_toEndOf="@id/textview_distance_label"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressbar_steps"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"

            app:cpb_progress="0"
            app:cpb_background_progressbar_color="?trackbarBackgroundColor"
            app:cpb_background_progressbar_width="2dp"
            app:cpb_progress_direction="to_left"
            app:cpb_progressbar_color="?colorControlRed"
            app:cpb_progressbar_width="4dp"
            app:cpb_round_border="true"

            app:layout_constraintStart_toStartOf="@id/textview_steps_label"
            app:layout_constraintTop_toTopOf="@id/textview_steps"
            app:layout_constraintEnd_toStartOf="@id/textview_steps"
            app:layout_constraintBottom_toBottomOf="@id/textview_steps"/>

        <TextView
            android:id="@+id/textview_steps"
            android:text="@string/zero_gm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorControlRed"
            android:textSize="16sp"
            tools:text="1234"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_steps_label"
            app:layout_constraintStart_toEndOf="@id/progressbar_steps"
            app:layout_constraintEnd_toEndOf="@id/textview_steps_label"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?colorPrimary"
            android:alpha="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
