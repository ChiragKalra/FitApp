<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingTop="18dp"
        android:background="?selectableItemBackground">

        <TextView
            android:id="@+id/textview_meal"
            tools:text="Breakfast"
            android:textSize="16sp"
            android:textColor="?android:textColorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_calories"
            tools:text="200 kcal"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/textview_meal"
            app:layout_constraintBottom_toBottomOf="@id/textview_meal"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textview_food_name"
            tools:text="Sandwich"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textview_meal"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textview_quantity"
            tools:text="100 Grams"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_food_name"
            app:layout_constraintBottom_toBottomOf="@id/textview_food_name"/>


        <TextView
            android:id="@+id/textview_protein_gram"
            tools:text="54.3 gm"
            android:textSize="16sp"
            android:textColor="?colorControlBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textview_food_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textview_carbs_gram"/>

        <TextView
            android:id="@+id/textview_carbs_gram"
            tools:text="54.3 gm"
            android:textSize="16sp"
            android:textColor="?colorControlGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textview_food_name"
            app:layout_constraintStart_toEndOf="@id/textview_protein_gram"
            app:layout_constraintEnd_toStartOf="@id/textview_fiber_gram"/>

        <TextView
            android:id="@+id/textview_fiber_gram"
            tools:text="54.3 gm"
            android:textSize="16sp"
            android:textColor="?colorControlPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textview_food_name"
            app:layout_constraintStart_toEndOf="@id/textview_carbs_gram"
            app:layout_constraintEnd_toStartOf="@id/textview_fat_gram"/>

        <TextView
            android:id="@+id/textview_fat_gram"
            tools:text="54.3 gm"
            android:textSize="16sp"
            android:textColor="?colorControlRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/textview_food_name"
            app:layout_constraintStart_toEndOf="@id/textview_fiber_gram"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/bottom_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:textColorSecondary"
            android:alpha="0.2"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/textview_protein_gram"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
